@{
    ViewData["Title"] = "Thread Leak Scenario 1 - Running";
}
<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-dark text-white">
                    <h2>Thread Leak Scenario 1 - Running</h2>
                </div>
                <div class="card-body">
                    <div class="alert alert-dark">
                        <strong>Thread Leak in Progress...</strong>
                    </div>
                    <div class="text-center">
                        <div class="spinner-border text-dark" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                        <p class="mt-3">The application is simulating a thread leak by creating threads that never exit...</p>
                    </div>
                    <div class="mt-4">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to Scenarios
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 
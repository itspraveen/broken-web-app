@{
    ViewData["Title"] = "Thread Leak Scenario 1";
}
<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-dark text-white">
                    <h2>Thread Leak Scenario 1</h2>
                </div>
                <div class="card-body">
                    <div class="alert alert-dark">
                        <strong>Warning:</strong> This scenario will simulate a thread leak by creating threads that never exit.
                    </div>
                    <p class="description">
                        This scenario demonstrates a thread leak. Clicking the button will create multiple threads that never exit, causing a thread leak.
                    </p>
                    <div class="text-center mt-4">
                        <a href="@Url.Action("ThreadLeak1Actual", "Scenarios")" class="btn btn-dark btn-lg">
                            <i class="fas fa-threads"></i> Start Thread Leak
                        </a>
                    </div>
                    <div class="mt-4">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to Scenarios
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 
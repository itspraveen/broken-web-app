@{
    ViewData["Title"] = "Crash Scenario 1 - Executing";
}

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h2>Crash Scenario 1 - Executing</h2>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger">
                        <strong>Application Crash in Progress...</strong>
                    </div>
                    
                    <div class="text-center">
                        <div class="spinner-border text-danger" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                        <p class="mt-3">The application is crashing due to an unhandled exception...</p>
                    </div>
                    
                    <div class="mt-4">
                        <h5>What's happening:</h5>
                        <ul>
                            <li>A background thread has been started</li>
                            <li>The thread is about to throw an unhandled exception</li>
                            <li>This will cause the application to crash</li>
                            <li>You may see error messages or the application may stop responding</li>
                        </ul>
                    </div>
                    
                    <div class="mt-4">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to Scenarios
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border: none;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        margin-top: 20px;
    }
    
    .card-header {
        border-bottom: none;
    }
    
    .spinner-border {
        width: 3rem;
        height: 3rem;
    }
</style> 
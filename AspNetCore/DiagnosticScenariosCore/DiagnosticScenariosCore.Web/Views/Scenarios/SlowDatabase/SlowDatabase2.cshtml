@{
    ViewData["Title"] = "Slow Database Scenario 2";
}
<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h2>Slow Database Scenario 2</h2>
                </div>
                <div class="card-body">
                    <div class="alert alert-primary">
                        <strong>Info:</strong> This scenario will simulate a slow database operation by waiting for 90 seconds.
                    </div>
                    <p class="description">
                        This scenario demonstrates a slow database operation. Clicking the button will cause the application to wait for 90 seconds to simulate a slow database query.
                    </p>
                    <div class="text-center mt-4">
                        <a href="@Url.Action("SlowDatabase2Actual", "Scenarios")" class="btn btn-primary btn-lg">
                            <i class="fas fa-database"></i> Start Slow Database
                        </a>
                    </div>
                    <div class="mt-4">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to Scenarios
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 
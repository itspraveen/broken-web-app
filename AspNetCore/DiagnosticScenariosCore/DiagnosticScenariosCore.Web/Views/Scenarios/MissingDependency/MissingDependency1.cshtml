@{
    ViewData["Title"] = "Missing Dependency Scenario 1";
}
<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-secondary text-white">
                    <h2>Missing Dependency Scenario 1</h2>
                </div>
                <div class="card-body">
                    <div class="alert alert-secondary">
                        <strong>Warning:</strong> This scenario will throw a DllNotFoundException to simulate a missing dependency.
                    </div>
                    <p class="description">
                        This scenario demonstrates a missing dependency error. Clicking the button will throw a DllNotFoundException to simulate a missing required dependency.
                    </p>
                    <div class="text-center mt-4">
                        <a href="@Url.Action("MissingDependency1Actual", "Scenarios")" class="btn btn-secondary btn-lg">
                            <i class="fas fa-exclamation-triangle"></i> Trigger Missing Dependency
                        </a>
                    </div>
                    <div class="mt-4">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to Scenarios
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 
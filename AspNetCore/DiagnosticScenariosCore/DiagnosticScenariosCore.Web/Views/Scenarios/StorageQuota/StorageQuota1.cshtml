@{
    ViewData["Title"] = "Storage Quota Scenario 1";
}
<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-dark text-white">
                    <h2>Storage Quota Scenario 1</h2>
                </div>
                <div class="card-body">
                    <div class="alert alert-dark">
                        <strong>Info:</strong> This scenario will simulate storage quota exceeded by attempting to write large amounts of data.
                    </div>
                    <p class="description">
                        This scenario demonstrates storage quota exceeded. Clicking the button will simulate attempting to write data until storage quota is exceeded.
                    </p>
                    <div class="text-center mt-4">
                        <a href="@Url.Action("StorageQuota1Actual", "Scenarios")" class="btn btn-dark btn-lg">
                            <i class="fas fa-hdd"></i> Start Storage Quota
                        </a>
                    </div>
                    <div class="mt-4">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to Scenarios
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 
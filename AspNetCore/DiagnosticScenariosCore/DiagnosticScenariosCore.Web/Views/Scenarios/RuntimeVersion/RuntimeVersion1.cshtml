@{
    ViewData["Title"] = "Runtime Version Scenario 1";
}
<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-dark text-white">
                    <h2>Runtime Version Scenario 1</h2>
                </div>
                <div class="card-body">
                    <div class="alert alert-dark">
                        <strong>Info:</strong> This scenario will simulate runtime version issues by checking the current runtime version.
                    </div>
                    <p class="description">
                        This scenario demonstrates runtime version issues. Clicking the button will check the current runtime version and display information about the runtime environment.
                    </p>
                    <div class="text-center mt-4">
                        <a href="@Url.Action("RuntimeVersion1Actual", "Scenarios")" class="btn btn-dark btn-lg">
                            <i class="fas fa-code"></i> Check Runtime Version
                        </a>
                    </div>
                    <div class="mt-4">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to Scenarios
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 
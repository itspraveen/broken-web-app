@{
    ViewData["Title"] = "Connection Pool Scenario 3 - Running";
}
<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-info text-dark">
                    <h2>Connection Pool Scenario 3 - Running</h2>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <strong>Connection Pool Exhaustion in Progress...</strong>
                    </div>
                    <div class="text-center">
                        <div class="spinner-border text-info" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                        <p class="mt-3">The application is simulating connection pool exhaustion by opening many connections...</p>
                    </div>
                    <div class="mt-4">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to Scenarios
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 
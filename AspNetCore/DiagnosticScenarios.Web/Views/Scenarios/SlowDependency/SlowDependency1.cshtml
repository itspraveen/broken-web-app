@{
    ViewData["Title"] = "Slow Dependency Scenario 1";
}
<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h2>Slow Dependency Scenario 1</h2>
                </div>
                <div class="card-body">
                    <div class="alert alert-primary">
                        <strong>Info:</strong> This scenario will simulate a slow external dependency by waiting for 40 seconds.
                    </div>
                    <p class="description">
                        This scenario demonstrates a slow external dependency. Clicking the button will cause the application to wait for 40 seconds to simulate a slow external service call.
                    </p>
                    <div class="text-center mt-4">
                        <a href="@Url.Action("SlowDependency1Actual", "Scenarios")" class="btn btn-primary btn-lg">
                            <i class="fas fa-external-link-alt"></i> Start Slow Dependency
                        </a>
                    </div>
                    <div class="mt-4">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to Scenarios
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 